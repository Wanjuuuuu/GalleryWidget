<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/config_option_button1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/config_option_button_gallery"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toTopOf="@+id/config_option_textView2" />

    <Button
        android:id="@+id/config_option_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_option_button_changetext"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="153dp" />

    <TextView
        android:id="@+id/config_option_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_option_gallery"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/config_option_button1"
        app:layout_constraintHorizontal_bias="0.504" />

    <TextView
        android:id="@+id/config_option_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_option_text"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/config_option_button2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>